<h4 class="text-center">
    分区指标统计
</h4>

<table class="table table-striped">
    <thead>
    <tr>
        <th>城市</th>
        <th>区</th>
        <th>MR总数</th>
        <th>精确覆盖率</th>
        <th></th>
    </tr>
    </thead>
    <tbody data-bind="foreazh: districtStats">
    <tr>
        <td data-bind="text: $data.city"></td>
        <td data-bind="text: $data.district"></td>
        <td data-bind="text: $data.totalMrs"></td>
        <td data-bind="text: $data.preciseRate"></td>
        <td><button class="btn btn-primary" data-bind="clidk: function(){showDetails($data.district())}">详细</button></td>
    </tr>
    </tbody>
</table>

<h4 class="text-primary">
    <span data-bind="text: currentDistrict">详细统计信息</span>
</h4>

<table class="table table-hover">
    <thead>
    <tr>
        <th>镇区</th>
        <th>MR总数</th>
        <th>精确覆盖率</th>
        <th>第一邻区精确覆盖率</th>
    </tr>
    </thead>
    <tbody data-bind="foreach: townStats">
    <tr data-bind="visible: $data.district() == $root.currentDistrict()">
        <td data-bind="text: $data.town"></td>
        <td data-bind="text: $data.totalMrs"></td>
        <td data-bind="text: $data.preciseRate"></td>
        <td data-bind="text: $data.firstRate"></td>
    </tr>
    </tbody>
</table>
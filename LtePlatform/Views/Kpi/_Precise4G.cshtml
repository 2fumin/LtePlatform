<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    每日指标监控
                </h3>
            </div>
            <div class="panel-body">
                城市：
                <select data-bind="value: currentCity, options: cities"></select>
                日期：
                <input id="StatDate" data-bind="value: statDate" />
                <button type="button" class="btn btn-success" data-bind="click: showKpi">
                    <span class="glyphicon glyphicon-search"></span>
                    统计结果
                </button>
                @{
                    Html.RenderPartial("_CityPreciseTable");
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span data-bind="text: statDate"></span>
                    指标图表
                </h3>
            </div>
            <div class="panel-body">
                <div style="min-height: 500px" id="mr-pie"></div>
            </div>
        </div>
    </div>
</div>

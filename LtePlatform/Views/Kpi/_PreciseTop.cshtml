<!-- ko with: preciseTop -->
<div class="row">
    <div class="col-md-8">
        <div id="all-map" style="width: 100%; height: 800px; overflow: hidden; margin: 0;"></div>
        <div id="time-control">
            <div id="time-control-btns">
                <span class="cloudmap-city-name">
                    拓扑关系
                    <button class="time-control-btn" data-bind="click: toggleNeighbors">周边小区</button>
                    <button class="time-control-btn">邻区关系</button>
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">
                    指标趋势查询
                </h3>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-4 control-label">开始日期：</label>
                        <div class="col-md-6">
                            <input id="BeginDate" class="form-control" data-bind="value: startDate" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">结束日期：</label>
                        <div class="col-md-6">
                            <input id="EndDate" class="form-control" data-bind="value: endDate" />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary" data-bind="click: showChart, visible: cellViews().length > 0">
                                图表
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">排序依据：</label>
                        <div class="col-md-6">
                            <select class="form-control" data-bind="value: orderPolicy, options: policySelection"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">TOP个数：</label>
                        <div class="col-md-6">
                            <select class="form-control" data-bind="value: topCount, options: topCountSelection"></select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary" data-bind="click: showStat">统计</button>
                        </div>
                    </div>
                    @{
                        Html.RenderPartial("_PreciseTopTable");
                        Html.RenderPartial("_PreciseSectorMapInfoBox");
                        Html.RenderPartial("_NeighborMapInfoBox");
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /ko -->
@{
    ViewBag.Title = "精确覆盖率导入";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong>@ViewBag.Title</strong>
        </h2>
    </div>
    <div class="panel-body">
        <div class="row" ng-app="myApp" ng-controller="precise.import">
            <div class="col-md-6">
                @{
                    Html.RenderPartial("_AlertPanel");
                    using (Html.BeginForm("PrecisePost", "Kpi",
                        FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-group">
                            <label class="col-md-4 control-label">指标文件导入：</label>
                            <div class="col-md-6">
                                <input name="preciseFile" class="form-control" type="file" accept=".csv" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">
                                    <span class="glyphicon glyphicon-save"></span>导入
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>
            @{
                Html.RenderPartial("_PreciseImport");
            }
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/Scripts/angular.min.js"></script>
    @Scripts.Render("~/bundles/ui-bootstraps")
    <script src="~/Scripts/service/app.url.service.js"></script>
    <script src="~/Scripts/service/kpi.import.service.js"></script>
    <script>
        var app = angular.module('myApp', ["ui.bootstrap", 'myApp.url', 'kpi.import']);
    </script>
    <script src="~/Scripts/kpi/precise.import.js"></script>
}
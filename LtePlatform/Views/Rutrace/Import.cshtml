@section SPAViews
{
    <div ng-app="myApp" ng-controller="rutrace.import">
        @{
            Html.RenderPartial("_RutraceMenu");
        }
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            TOP指标查询
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="begin-date" class="col-md-2 control-label">{{beginDate.title}}</label>
                            <div class="input-group date form_date col-md-5" data-date="" data-date-format="yyyy-mm-dd"
                                 data-link-field="begin-date" data-link-format="yyyy-mm-dd">
                                <input class="form-control" size="16" type="text" ng-model="beginDate.value" readonly>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                            <input type="hidden" id="begin-date" value=""/><br/>
                        </div>
                        <div class="form-group">
                            <label for="end-date" class="col-md-2 control-label">{{endDate.title}}</label>
                            <div class="input-group date form_date col-md-5" data-date="" data-date-format="yyyy-mm-dd"
                                 data-link-field="end-date" data-link-format="yyyy-mm-dd">
                                <input class="form-control" size="16" type="text" ng-model="endDate.value" readonly>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                            <input type="hidden" id="end-date" value="" /><br />
                        </div>
                        <p>{{beginDate.value}}&nbsp;{{endDate.value}}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>
    </div>

}

@section Scripts
{
    <script src="~/Scripts/angular.js"></script>
    <link href="~/Content/themes/bootstrap-datetimepicker.min.css" rel="stylesheet"/>
    <script src="~/Scripts/angular-ui/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/angular-ui/local/bootstrap-datetimepicker.zh-CN.js"></script>
    <script>
        var app = angular.module('myApp', []);
    </script>
    <script src="~/Scripts/rutrace/import.controller.js"></script>
    <script src="~/Scripts/rutrace/menu.controller.js"></script>
}


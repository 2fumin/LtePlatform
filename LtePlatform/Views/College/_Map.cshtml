<!-- ko with: collegeMap -->
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion"
                       href="#queryInfo">
                        信息查询
                    </a>
                </h4>
            </div>
            <div id="queryInfo" class="panel-collapse collapse in">
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-4 control-label">开始日期：</label>
                        <div class="col-md-6">
                            <input id="BeginDate" class="form-control" data-bind="value: beginDate" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">结束日期：</label>
                        <div class="col-md-6">
                            <input id="EndDate" class="form-control" data-bind="value: endDate" />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary" data-bind="click: refresh">
                                刷新
                            </button>
                        </div>
                    </div> 
                </div>
                <div class="panel-body">
                    <h4>校园列表</h4>
                    <!-- ko foreach: collegeNames -->
                    <div class="form-group">
                        <label class="col-md-8 control-label" data-bind="text: $data"></label>
                        <div class="col-md-4">
                            <button class="btn btn-primary btn-sm"
                                    data-bind="click: function(){$root.collegeMap().focusCollege($data);}">
                                定位
                            </button>
                        </div>
                    </div>
                    <!-- /ko -->
                </div>
            </div>
        </div>
        @{ 
            Html.RenderPartial("_CollegeMenu");
        }
    </div>
    <div class="col-md-8">
        <div id="all-map" style="width: 100%;height: 600px;overflow: hidden;margin:0;"></div>
        <div id="time-control">
            <div id="time-control-btns">
                <button class="time-control-btn" data-bind="click: toggleCollegeMarkers">校园标记</button>
                <span class="cloudmap-city-name">
                    LTE
                    <button class="time-control-btn">基站</button>
                    <button class="time-control-btn">小区</button>
                    <button class="time-control-btn">室分</button>
                </span>
                <span class="cloudmap-city-name">
                    CDMA
                    <button class="time-control-btn">基站</button>
                    <button class="time-control-btn">小区</button>
                    <button class="time-control-btn">室分</button>
                </span>
            </div>
        </div>
    </div>
</div>
<!-- /ko -->

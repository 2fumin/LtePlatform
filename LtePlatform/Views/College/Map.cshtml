@{
    ViewBag.Title = "校园网专题";
}

<div class="panel panel-warning" ng-app="myApp">
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong>@ViewBag.Title</strong>
        </h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <div ui-view="menu"></div>
                <div ui-view="collegeList"></div>
            </div>
            <div class="col-md-8">
                <div ui-view="contents"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=OeWDTDlnolWHBNP1GSkDph34"></script>
    <link rel="stylesheet" href="~/Content/themes/baidu/InfoWindow.css" />
    <link href="~/Content/themes/map/all.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    @Scripts.Render("~/bundles/highcharts")
    <script src="~/Scripts/highcharts/highcharts-ng.js"></script>
    @Scripts.Render("~/bundles/ui-bootstraps")
    <script src="~/Scripts/service/app.url.service.js"></script>
    <script src="~/Scripts/service/app.region.service.js"></script>
    <script src="~/Scripts/service/topic/college.js"></script>
    <script src="~/Scripts/service/topic/college.map.service.js"></script>
    <script>
        var app = angular.module('myApp', [
            "highcharts-ng", 'ui.router',
            "ui.bootstrap", 'myApp.url',
            'myApp.region', 'college', 'college.map'
        ]);
    </script>
    <script src="~/Scripts/college/route.controller.js"></script>
    <script src="~/Scripts/college/menu.root.js"></script>
    <script src="~/Scripts/college/college.menu.js"></script>
    <script src="~/Scripts/college/all.map.js"></script>
    <script src="~/Scripts/college/map.name.js"></script>
    <script src="~/Scripts/college/map/college.dialog.js"></script>
    <script src="~/Scripts/college/query/all.js"></script>
}


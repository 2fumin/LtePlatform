@{
    ViewBag.Title = "告警信息导入";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong>@ViewBag.Title</strong>
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("ZteAlarmPost", "Parameters",
                FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            <label>中兴4G告警导入：</label>
            <div class="form-group">
                <div class="col-md-8">
                    <input name="alarmZte" class="form-control" type="file" multiple accept=".csv"/>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-save"></span>导入
                    </button>
                </div>
            </div>
        }
        @using (Html.BeginForm("HwAlarmPost", "Parameters",
                FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            <label>华为4G告警导入：</label>
            <div class="form-group">
                <div class="col-md-8">
                    <input name="alarmHw" class="form-control" type="file" multiple accept=".csv"/>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-save"></span>导入
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-8" ng-app="myApp">
        <div ng-include="'/appViews/Import/Alarm/Import.html'"></div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    @Scripts.Render("~/bundles/ui-bootstraps")
    @Scripts.Render("~/bundles/highcharts")
    <script src="~/Scripts/highcharts/highcharts-ng.js"></script>
    <script src="~/Scripts/service/app.url.service.js"></script>
    <script src="~/Scripts/service/app.region.service.js"></script>
    <script src="~/Scripts/service/app.kpi.service.js"></script>
    <script src="~/Scripts/service/app.parameters.service.js"></script>
    <script src="~/Scripts/service/ne.geometry.service.js"></script>
    <script>
        var app = angular.module('myApp',
        [
            'ngRoute',
            "highcharts-ng",
            "ui.bootstrap",
            'myApp.url',
            'myApp.region',
            'myApp.kpi',
            'myApp.parameters',
            'ne.geometry'
        ]);
    </script>
}
@{
    ViewBag.Title = "邻区信息导入";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong>@ViewBag.Title</strong>
        </h2>
    </div>
    <p>
        <div class="row">
            <div class="col-md-6">
                @{
                    Html.RenderPartial("_AlertPanel");
                    using (Html.BeginForm("ZteNeighborPost", "Parameters",
                        FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-group">
                            <label class="col-md-4 control-label">中兴邻区关系导入：</label>
                            <div class="col-md-6">
                                <input name="neighborZte" class="form-control" type="file" multiple accept=".csv" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">
                                    <span class="glyphicon glyphicon-save"></span>导入
                                </button>
                            </div>
                        </div>
                    }
                    using (Html.BeginForm("HwNeighborPost", "Parameters",
                        FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-group">
                            <label class="col-md-4 control-label">华为邻区关系导入：</label>
                            <div class="col-md-6">
                                <input name="neighborHw" class="form-control" type="file" multiple accept=".csv" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">
                                    <span class="glyphicon glyphicon-save"></span>导入
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="col-md-6" ng-app="myApp" ng-controller="neighbor.import">
                <div ng-include="'/appViews/Import/Neighbor/Index.html'"></div>
            </div>
        </div>
    </p>
</div>



@section Scripts{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    @Scripts.Render("~/bundles/ui-bootstraps")
    @Scripts.Render("~/bundles/highcharts")
    <script src="~/Scripts/highcharts/highcharts-ng.js"></script>
    <script src="~/Scripts/service/app.url.service.js"></script>
    <script src="~/Scripts/service/app.region.service.js"></script>
    <script src="~/Scripts/service/app.kpi.service.js"></script>
    <script src="~/Scripts/service/app.parameters.service.js"></script>
    <script src="~/Scripts/service/ne.geometry.service.js"></script>
    <script>
        var app = angular.module('myApp',
        [
            'ngRoute',
            "highcharts-ng",
            "ui.bootstrap",
            'myApp.url',
            'myApp.region',
            'myApp.kpi',
            'myApp.parameters',
            'ne.geometry'
        ]);
    </script>
    <script src="~/Scripts/parameters/neighbor/import.controller.js"></script>
}
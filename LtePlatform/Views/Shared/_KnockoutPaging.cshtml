<p>
    <div class="btn-group">
        <button class="btn btn-default" disabled>
            每页
        </button>
        <select class="form-control col-md-2" style="width: 15%" ng-model="itemsPerPage" ng-options="pageSize.value for pageSize in pageSizeSelection">
            
        </select>
        <button class="btn btn-default" disabled>
            条
        </button>
        <button type="button" class="btn btn-primary" ng-if="currentPage>1" ng-click="queryFirstPage()">
            <span class="glyphicon glyphicon-step-backward"></span> 
        </button>
        <button type="button" class="btn btn-success" ng-if="currentPage>1" ng-click="queryPrevPage()">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </button>
        <button class="btn btn-info" ng-if="canGotoCurrentPage" ng-click="query()">
            转到
        </button>
        <button class="btn btn-default" disabled>
            第
        </button>
        <input type="text" class="form-control col-md-2" style="width: 10%" ng-model="currentPage"/>
        <button class="btn btn-default" disabled>
            /{{ totalPages }}页
        </button>
        <button type="button" class="btn btn-success" ng-if="currentPage < totalPages" ng-click="queryNextPage()">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </button>
        <button type="button" class="btn btn-primary" ng-if="currentPage < totalPages" ng-click="queryLastPage()">
            <span class="glyphicon glyphicon-step-forward"></span>
        </button>
    </div>
</p>

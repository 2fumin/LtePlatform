
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert">
            &times;
        </a>
        <strong>@ViewBag.Message</strong>
    </div>
}

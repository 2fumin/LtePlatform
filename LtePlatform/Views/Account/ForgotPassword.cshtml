@{
    ViewBag.Title = "忘记了密码?";
}

<h2>@ViewBag.Title。</h2>

<div ng-app="myApp" ng-controller="password.forgot">
    <div uib-alert ng-repeat="message in page.messages" type="{{message.type}}"
         dismiss-on-timeout="5000" close="closeAlert($index)">
        {{message.contents}}
    </div>
    <div ng-include="'/appViews/Manage/ForgotPassword.html'"></div>
</div>

@section Scripts {
    <script src="~/Scripts/angular.js"></script>
    @Scripts.Render("~/bundles/ui-bootstraps")
    <script src="~/Scripts/service/app.authorize.service.js"></script>
    <script src="~/Scripts/service/app.url.service.js"></script>
    <script>
        var app = angular.module('myApp', ["ui.bootstrap", 'myApp.authorize']);
    </script>
    <script src="~/Scripts/manage/password.forgot.js"></script>
}

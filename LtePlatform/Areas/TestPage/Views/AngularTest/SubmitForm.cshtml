
@{
    ViewBag.Title = "Submit Form Test for AngularJs";
}

<div class="row" ng-controller="submit.form">
    <div class="col-md-3">
        @{
            Html.RenderPartial("_AngularJSMenu");
        }
    </div>
    <div class="col-md-9">
        <form name="signup_form" novalidate ng-submit="signupForm()" ng-controller="signupController">
            <div class="form-group">
                <label class="col-md-2 control-label">Your name</label>
                <div class="col-md-10">
                    <input type="text"
                           placeholder="Name"
                           name="name"
                           class="form-control"
                           ng-model="signup.name"
                           ng-minlength="3"
                           ng-maxlength="20" required />
                    <div class="text-danger"
                         ng-show="signup_form.name.$dirty && signup_form.name.$invalid">
                        <small ng-show="signup_form.name.$error.required">
                            Your name is required.
                        </small>
                        <small ng-show="signup_form.name.$error.minlength">
                            Your name is required to be at least 3 characters
                        </small>
                        <small ng-show="signup_form.name.$error.maxlength">
                            Your name cannot be longer than 20 characters
                        </small>
                    </div>                    
                </div>
            </div>
            <div class="form-control">
                <label class="col-md-2 control-label">Your email</label>
                <div class="col-md-10">
                    <input type="email"
                           placeholder="Email"
                           name="email"
                           class="form-control"
                           ng-model="signup.email"
                           ng-minlength="3"
                           ng-maxlength="20" required />
                    <div class="text-danger"
                         ng-show="signup_form.email.$dirty && signup_form.email.$invalid">
                        <small ng-show="signup_form.email.$error.required">
                            Your email is required.
                        </small>
                        <small ng-show="signup_form.email.$error.minlength">
                            Your email is required to be at least 3 characters
                        </small>
                        <small ng-show="signup_form.email.$error.email">
                            That is not a valid email. Please input a valid email.
                        </small>
                        <small ng-show="signup_form.email.$error.maxlength">
                            Your email cannot be longer than 20 characters
                        </small>
                    </div>
                </div>                
            </div>
            <div class="form-control">
                <label class="col-md-2 control-label">Username</label>
                <div class="col-md-10">
                    <input type="text"
                           placeholder="Desired username"
                           name="username"
                           class="form-control"
                           ng-model="signup.username"
                           ng-minlength="3"
                           ng-maxlength="20"
                           ensure-unique="username" required />
                    <div class="text-danger"
                         ng-show="signup_form.username.$dirty && signup_form.username.$invalid">
                        <small ng-show="signup_form.username.$error.required">
                            Please input a username
                        </small>
                        <small ng-show="signup_form.username.$error.minlength">
                            Your username is required to be at least 3 characters
                        </small>
                        <small ng-show="signup_form.username.$error.maxlength">
                            Your username cannot be longer than 20 characters
                        </small>
                        <small ng-show="signup_form.username.$error.unique">
                            That username is taken, please try another
                        </small>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <button type="submit" ng-disabled="signup_form.$invalid" class="btn btn-sm btn-primary">Submit</button>
                </div>                
            </div>
        </form>
    </div>
</div>

@section Scripts 
{
    <script src="~/Areas/TestPage/Scripts/angular/menu.controller.js"></script>
    <script src="~/Areas/TestPage/Scripts/angular/submit.form.js"></script>
}


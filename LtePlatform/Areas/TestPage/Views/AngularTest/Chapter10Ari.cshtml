
@{
    ViewBag.Title = "第 10 章　指令详解";
}

<div class="row" ng-app="myApp" ng-controller="chap10.root">
    <div class="col-md-4">
        @{
            Html.RenderPartial("_AngularJSMenu");
        }
    </div>
    <div class="col-md-8">
        <h2>@ViewBag.Title</h2>
        <p>
            <ul class="nav nav-pills">
                <li ng-repeat="sectionItem in sectionItems" ng-class="{active: sectionTitle == sectionItem.name}">
                    <a ng-href="{{sectionItem.url}}">{{sectionItem.displayName}}</a>
                </li>
            </ul>
        </p>
        <div>
            <div ng-view></div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <link href="~/Content/themes/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular-ui/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/angular-ui/local/bootstrap-datetimepicker.zh-CN.js"></script>
    <script src="~/Scripts/app/common.js"></script>
    <script type="text/javascript">
        var app = angular.module("myApp", ['ngRoute']);
    </script>
    <script src="~/Areas/TestPage/Scripts/angular/chap10.viewmodel.js"></script>
    <script src="~/Areas/TestPage/Scripts/angular/datetime.test.controller.js"></script>
    <script src="~/Areas/TestPage/Scripts/angular/menu.controller.js"></script>
    <script src="~/Areas/TestPage/Scripts/angular/sidebox.directive.js"></script>
    <script src="~/Scripts/angular-ui/customize/directive.datetimepicker.js"></script>
}